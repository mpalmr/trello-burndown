{
    "compilerOptions": {
        "rootDir": "src/",
        "outDir": "dist/",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "pretty": true,
        "newLine": "LF"
    },
    "files": [
        "src/api/index.ts",
        "src/client/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}